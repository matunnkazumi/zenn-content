{
  "filters": {
    "allowlist": {
      "allow": [
        ":::",
        "/:::details\\s.*/"
      ]
    }
  },
  "rules": {
    "preset-ja-spacing": true,
    "preset-ja-technical-writing": {
      "ja-no-successive-word": false
    },
    "preset-japanese": true,
    "@proofdict/proofdict": {
      "dicts": [
        {
          "dictURL": "https://azu.github.io/proof-dictionary/"
        },
        {
          "dictGlob": "./dict/*.yml"
        }
      ]
    }
  }
}
